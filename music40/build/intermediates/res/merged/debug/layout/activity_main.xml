<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    >
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      
        >
    <Button 
        android:id="@+id/main_serach_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_social_search_normal"
        android:layout_gravity="right"
        android:onClick="doClick"
        />
    
        
    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         
         >
        <RadioButton 
            android:id="@+id/rb_hot"
             android:layout_width="0dip"
        	 android:layout_height="wrap_content"
         	 android:text="热歌榜"
         	 android:layout_weight="1"
         	 android:button="@null"
         	 android:gravity="center"
            />
        <RadioButton 
            android:id="@+id/rb_new"
             android:layout_width="0dip"
        	 android:layout_height="wrap_content"
         	 android:text="新歌榜"
         	 android:layout_weight="1"
         	 android:button="@null"
         	 android:gravity="center"
            />
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1"
        >
        
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:gravity="center_vertical"
        >

        
        <com.tedu.music.ui.CircleImageView
            android:id="@+id/main_cir_img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/ic_launcher"
            android:onClick="doClick" 
            />
        
        <TextView 
            android:id="@+id/main_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>
    
</LinearLayout>

<LinearLayout
    android:id="@+id/main_lin_hit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff000"
    android:visibility="invisible"
     >

    
    <RelativeLayout 
     android:layout_width="match_parent"
    android:layout_height="match_parent"
        >

        
        <ImageView
            android:id="@+id/hit_bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           	android:src="@drawable/login_background"
            android:scaleType="fitXY"
             />

        <TextView
            android:id="@+id/hit_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:text="歌曲名" 
            android:textSize="30sp"
            />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_alignRight="@+id/hit_song_name"
            android:layout_below="@+id/hit_song_name"
            android:layout_marginTop="32dp"
            android:src="@drawable/icon_shake_fail" />

        <TextView
            android:id="@+id/hit_lrc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="显示歌词" />

        <SeekBar
            android:id="@+id/hit_ctrol_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/hit_lrc_txt"
            android:layout_marginTop="53dp" />

        <TextView
            android:id="@+id/hit_playtime_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/hit_ctrol_seek"
            android:layout_marginTop="18dp"
            android:text="显示播放时间" 
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/hit_duction_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hit_playtime_txt"
            android:layout_alignBottom="@+id/hit_playtime_txt"
            android:layout_alignParentRight="true"
            android:text="显示音乐长度"
            android:textColor="#ffffff"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/hit_playtime_txt"
            android:layout_marginTop="36dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hit_pre_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nc_previoussong_pressed" 
                android:onClick="doClick"
                />
            <ImageView
                android:id="@+id/hit_play_img"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/appwidget_icon_play_normal" 
                android:layout_weight="1"
                  android:onClick="doClick"
                />

            <ImageView
                android:id="@+id/hit_next_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nc_nextsong_pressed"
                  android:onClick="doClick"
                 />

        </LinearLayout>

          <Button
              android:id="@+id/main_download_btn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_gravity="right"
              android:background="@drawable/btn_social_pic_save_normal"
              android:onClick="doClick"
               />
  
    </RelativeLayout>
    
    
    
</LinearLayout>

</RelativeLayout>
